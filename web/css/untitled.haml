








@import "partials/navigation";
@import "partials/device";

.footer {
  padding-bottom: $theme-spacing * 2;
  padding-top: $theme-spacing;

  a {
    font-size: 1em;
  }
}

  article {
    color: rgba(#000, 1);
    padding-top: $theme-spacing;
    padding-bottom: $theme-spacing;

  .grid {
    padding-top: $theme-spacing;
    padding-left: $theme-spacing;
    padding-right: $theme-spacing;
    padding-bottom: $theme-spacing;
    box-shadow: 0 3px 0 0px rgba(nth($new_gray, 3), .4),
                0 1px 0 1px rgba(nth($new_gray, 3), .4);
    border-bottom-left-radius: 3px;
    border-bottom-right-radius: 3px;

  }
    .row {

      margin-left: -( var(--grid-gutter-calc));
      margin-right: -( var(--grid-gutter-calc));
    }

    .cell {
      margin-top: 2px;
      margin-left: var(--grid-gutter-calc);
      margin-right: var(--grid-gutter-calc);
    }

    header {
      p {
        margin-top: $theme-spacing / 2;
      }
    }

    section {
      margin-top: $theme-spacing;
    }

    .cell {
      background-color: rgba(nth($new_gray, 3), .4);

      .cell {

      }

      padding: 10px;
      font-size: .5em;
    }

    .cell.no-fill {
      p {
        margin-top: $theme-spacing;
      }

      p, .alert {
        margin-bottom: $theme-spacing;
      }
    }
  }


// Hacks for demonstration purposes

.demo-alignment .row {
  height: 10em;

  span {
    border-bottom: 1px dotted rgba(0, 0, 0, .4);
    padding: 3px 0;
  }
}

.demo-baseline {
  &-1 {
    height: 5em;

    span {
      font-size: 3em;
    }
  }

  &-2 {
    height: 9em;

    span {
      font-size: 4.5em;
    }
  }
}








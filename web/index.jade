!!! 5

html(lang="en")
  head

    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')

    title GridleCSS | Yet another Flexbox Grid

    meta(name='description', content='A simple 12/24 columns Flexbox Grid created in SASS by Vlad Radulescu @ Studio51')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800|Open+Sans+Condensed:300,700,300italic|Raleway:400,200,300,100,500,600,700,800,900')
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.4/styles/default.min.css')
    link(rel='stylesheet', href='css/theme.min.css')

    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')

  body.body

    header.header

      .grid.grid-columns

        .row.cells-middle
          .cell.cell-xs

            .brand
              h1.brand-name GridleCSS
                span.brand-name--pronunciation /ɡrɪd.lɛx/

              p.brand-motto Yet Another Flex Grid framework!

          .cell.cell-xs-2.cell-sm-3.cell-lg-2
            a.btn.btn-md.btn--git(href="https://github.com/studio51/gridlecss")
              i.fa.fa-github
              span.hidden-xs View on Github

        .row.row-auto
          .cell.cell-xs

            .device
              .device-frame--outter
                .device-buttons
                .device-camera
                .device-speaker

                .device-frame--inner

                  include templates/device-content.jade

                  nav.nav-menu(role="navigation")
                    ul

                      - var nav_items = ['basic', 'responsive', 'fluid', 'offset', 'nested', 'auto', 'alignment', 'distribution', 'reversed', 'reordered', 'masonry']
                      - var i = 1

                      each val in nav_items

                        li(class="animated-#{i++}")
                          a.btn.btn-sm(href="#", data-target="#grid-#{val}") #{val}

                .device-button

                a#toggle-menu.nav-menu--trigger(href="#", role="navigation-menu-trigger")
                  img(src="images/menu.svg", title="Burger menu button", alt="Show Menu", height="50")

        .row.row--social
          .cell.cell-sm-6
            p Free advertising!

            .social-likes
              a.btn.btn--facebook.facebook Facebook
              a.btn.btn--twitter.twitter(data-via="studiofifty1", data-related="pacMakaveli") Twitter
              a.btn.btn--plusone.plusone Google+

          .cell.cell-sm-offset-2.cell-sm-4.hidden-xs
            ul.list-inline.list--buttons
              li
                a.btn.btn--demo(href="", title="") Demo
              li
                a.btn.btn--download(href="https://github.com/studio51/gridlecss/archive/v1.0-beta.1.zip", title="GridleCSS Beta 1") Download Beta

    main.main

      include templates/basic-grid.jade
      include templates/responsive-grid.jade
      include templates/fluid-grid.jade
      include templates/offsets-grid.jade
      include templates/nested-grid.jade
      include templates/auto-grid.jade
      include templates/alignment-grid.jade
      include templates/distribution-grid.jade
      include templates/reversed-grid.jade
      include templates/reordering-grid.jade
      include templates/masonry-grid.jade

    footer.footer

      .grid
        .row
          .cell.cell-xs
            p
              | Crafted with &#9829; by &nbsp;
              a(href="//twitter.com/pacMakaveli90") Vlad Radulescu
              | &nbsp; © 2015 and maintained by &nbsp;
              a(href="//creative-studio51.co.uk") Studio51

          .cell.cell-xs-1.cells-bottom
            p v1.0.0

    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.4/highlight.min.js')

    script(src='js/main.min.js')

html(lang="en")
  head

    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')

    title GridleCSS | Yet another Flexbox Grid

    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800|Open+Sans+Condensed:300,700,300italic|Raleway:400,200,300,100,500,600,700,800,900')
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.4/styles/default.min.css')
    link(rel='stylesheet', href='css/theme.css')

    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')

  body.body

    header.header

      .grid
        .row.cells-middle
          .cell.cell-xs
            .brand
              h1 GridleCSS
                span /ɡrɪd.lɛx/

              p Yet Another Flex Grid framework!

          .cell.cell-md-5.cell-lg-4
            ul.list-inline
              li
                a.btn.btn-md.btn-git(href="https://github.com/studio51/framework-gridlecss")
                  i.fa.fa-github
                  span.hidden-xs.hidden-sm View on Github

              li
                a.btn.btn-md.btn-twt(href="https://twitter.com/intent/tweet?text=A new simple Flexbox Grid on the block! Check it out http://studio51.github.io/framework-gridlecss/ &via=studiofifty1")
                  i.fa.fa-twitter
                  span.hidden-xs.hidden-sm Spread the word

        .row
          .cell.cell-xs

            .device
              .outter-frame
                .camera
                .mic
                .inner-frame

                  include templates/twitter-feed.jade

                .button

    main.main

      .grid

        nav.nav-bar.cells-center

          a#toggle-menu.toggle-menu-button(href="#")
            img(src="images/menu-burger.svg")

          .collapsible
            ul.list-inline
              li
                a.btn.btn-sm(data-target='#grid-basic') Basic
              li
                a.btn.btn-sm(data-target='#grid-responsive') Responsive
              li
                a.btn.btn-sm(data-target='#grid-fluid') Fluid
              li
                a.btn.btn-sm(data-target='#grid-offset') Offsets
              li
                a.btn.btn-sm(data-target='#grid-nested') Nested
              li
                a.btn.btn-sm(data-target='#grid-auto') Auto
              li
                a.btn.btn-sm(data-target='#grid-alignment') Alignments
              li
                a.btn.btn-sm(data-target='#grid-distribution') Distribution
              li
                a.btn.btn-sm(data-target='#grid-reversed') Reversed
              li
                a.btn.btn-sm(data-target='#grid-reordered') Reordering
              li
                a.btn.btn-sm(data-target='#grid-masonry') Masonry

      include templates/basic-grid.jade
      include templates/responsive-grid.jade
      include templates/fluid-grid.jade
      include templates/offsets-grid.jade
      include templates/nested-grid.jade
      include templates/auto-grid.jade
      include templates/alignment-grid.jade
      include templates/distribution-grid.jade
      include templates/reversed-grid.jade
      include templates/reordering-grid.jade
      include templates/masonry-grid.jade

    footer.footer

      .grid
        .row
          .cell.cell-xs
            p
              | Crafted with &#9829; by

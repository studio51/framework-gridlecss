  typography: (
    size: (
      ant:    .25em,
      tiny:   .5em,
      small:  .7em,
      medium: .9em,
      normal: 1em,
      big:    1.2em,
      huge:   1.5em,
      giant:  2em,

      xxs: .25em,
      xs:  .5em,
      sm:  .7em,
      md:  .9em,
      nm:  1em,
      lg:  1.1em,
      xl:  1.3em,
      xxl: 2em

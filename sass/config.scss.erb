$spacing: 32px;

$sizes: (
  xxsmall:  ( 0,               ant,   light ),
  xsmall:   ( $spacing / 6,    tiny,   light ),
  small:    ( $spacing / 5,    small,   light ),
  medium:   ( $spacing / 4,    small,   regular ),
  large:    ( ($spacing / 2) (($spacing / 2) + ($spacing / 4)),    small,    regular ),
  xlarge:   ( ($spacing / 1.7) (($spacing / 2) + ($spacing / 2)),    nig,  bold ),
  xxlarge:  ( $spacing,        giant,  bold ),
);

$background-color: #F8F8FB;
$white:    #fff;
$gray:     #ecf0f1;
$black:    #34495e;
$darkblue: '';
$ink:      '';
$blue:     #6DA9ED;
$green:    #2ecc71;
$yellow:   #f1c40f;
$orange:   #e67e22;
$red:      #e74c3c;
$purple:   #9b59b6;
$teal:     #1abc9c;
$indigo:   '';

$colors: ('white', 'gray', 'black', 'darkblue', 'ink', 'blue', 'green', 'yellow', 'orange', 'red', 'purple', 'teal', 'indigo', 'psn', 'xbox', 'steam');

$config: (
  border: (
    size: 1px,
    radius: 6px
